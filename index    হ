<body>
    <div class="container">
        <header>
            <h1>Code Insertion System</h1>
            <p>Insert your existing code and easily add more HTML, CSS, and JavaScript</p>
        </header>
        
        <div class="main-content">
            <div class="code-section">
                <h2>Add Your Code</h2>
                <textarea id="htmlCode" placeholder="Enter HTML code here..."></textarea>
                <textarea id="cssCode" placeholder="Enter CSS code here..."></textarea>
                <textarea id="jsCode" placeholder="Enter JavaScript code here..."></textarea>
                
                <div class="button-group">
                    <button id="updateBtn">Update Preview</button>
                    <button id="clearBtn">Clear All</button>
                </div>
            </div>
            
            <div class="preview-section">
                <h2>Live Preview</h2>
                <div class="preview-area" id="preview">
                    <!-- Preview will be shown here -->
                </div>
            </div>
        </div>
        
        <div class="instructions">
            <h2>How to Use:</h2>
            <ol>
                <li>Your existing code is automatically inserted in the preview</li>
                <li>Add more HTML, CSS, and JavaScript in the text areas</li>
                <li>Click "Update Preview" to see the results</li>
                <li>Use "Clear All" to reset the code areas</li>
            </ol>
        </div>
        
        <footer>
            <p>Code Insertion System &copy; 2023</p>
        </footer>
    </div>

    <script>
        // Your existing code is automatically inserted
        const existingScript = document.createElement('script');
        existingScript.src = '//libtl.com/sdk.js';
        existingScript.setAttribute('data-zone', '10125812');
        existingScript.setAttribute('data-sdk', 'show_10125812');
        document.head.appendChild(existingScript);
        
        // Add data-zone element for the script to work with
        const dataZoneElement = document.createElement('div');
        dataZoneElement.setAttribute('data-zone', '10125812');
        dataZoneElement.innerHTML = '<div style="padding:20px; text-align:center; background:rgba(255,255,255,0.1); border-radius:8px;">Advertisement Area (data-zone: 10125812)</div>';
        document.getElementById('preview').appendChild(dataZoneElement);
        
        // Function to update preview
        function updatePreview() {
            const preview = document.getElementById('preview');
            const htmlCode = document.getElementById('htmlCode').value;
            const cssCode = document.getElementById('cssCode').value;
            const jsCode = document.getElementById('jsCode').value;
            
            // Clear previous content (except the existing data-zone element)
            preview.innerHTML = '';
            preview.appendChild(dataZoneElement);
            
            // Add HTML
            if (htmlCode) {
                const htmlElement = document.createElement('div');
                htmlElement.innerHTML = htmlCode;
                preview.appendChild(htmlElement);
            }
            
            // Add CSS
            if (cssCode) {
                const styleElement = document.createElement('style');
                styleElement.textContent = cssCode;
                document.head.appendChild(styleElement);
            }
            
            // Add JavaScript
            if (jsCode) {
                try {
                    eval(jsCode);
                } catch (error) {
                    console.error('JavaScript Error:', error);
                }
            }
        }
        
        // Function to clear all code areas
        function clearAllCode() {
            document.getElementById('htmlCode').value = '';
            document.getElementById('cssCode').value = '';
            document.getElementById('jsCode').value = '';
            updatePreview();
        }
        
        // Event listeners
        document.getElementById('updateBtn').addEventListener('click', updatePreview);
        document.getElementById('clearBtn').addEventListener('click', clearAllCode);
        
        // Initial preview update
        updatePreview();
    </script>
</body>
